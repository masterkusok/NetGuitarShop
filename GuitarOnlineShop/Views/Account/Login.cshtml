@model LoginViewModel
@{
	ViewBag.FooterEnabled = false;
	ViewBag.NavbarEnabled = false;
}
<div class="text-center justify-content-center text-light mt-5">
	<div class="offset-md-2 ms-auto me-auto col-md-4 p-2 border border-5 rounded-5 border-light border-opacity-75">
		<h2 class="m-2">Login</h2>
		<form method="post" asp-action="Login">
			<div asp-validation-summary=All class="text-danger"></div>
			<input type="hidden" name=returnUrl value="@ViewBag.ReturnUrl"/>
			<div class="form-group m-2 p-2">
				<label asp-for=Email></label>
				<input asp-for=Email class="form-control"/>
			</div>
			<div class="form-group m-2 p-2">
				<label asp-for=Password></label>
				<input asp-for=Password class="form-control"/>
			</div>
			<div class="form-group m-2 p-2">
				<label asp-for=RememberMe></label>
				<input type="checkbox" />
			</div>
			<a asp-action="register">Don't have account? Register here</a>
			<button type="submit" class="btn btn-success m-2">Sumbit</button>
		</form>
	</div>

</div>